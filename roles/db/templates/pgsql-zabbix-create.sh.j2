#!/bin/bash
export PGPASSWORD="zabbix"

sudo -u postgres psql -c "create user zabbix with password 'zabbix'"
sudo -u postgres psql -c "create database zabbix with owner zabbix"
sudo -u postgres psql -c "grant all privileges on database zabbix to zabbix"
zcat /usr/share/doc/zabbix-server-pgsql/create.sql.gz | sudo -u postgres psql -h localhost -d zabbix -U zabbix -W
